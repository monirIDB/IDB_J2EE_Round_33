        <Button
            android:id="@+id/button12"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignBaseline="@+id/button11"
            android:layout_alignBottom="@+id/button11"
            android:layout_alignLeft="@+id/button9"
            android:layout_alignStart="@+id/button9"
            android:text="=" />

        <Button
            android:id="@+id/button13"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignLeft="@+id/button10"
            android:layout_alignStart="@+id/button10"
            android:layout_alignTop="@+id/button12"
            android:text="/" />

        <Button
            android:id="@+id/button14"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignLeft="@+id/button11"
            android:layout_alignStart="@+id/button11"
            android:layout_below="@+id/button11"
            android:layout_marginTop="22dp"
            android:text="*" />

        <Button
            android:id="@+id/button15"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignBottom="@+id/button14"
            android:layout_alignLeft="@+id/button12"
            android:layout_alignStart="@+id/button12"
            android:text="-" />

        <Button
            android:id="@+id/button16"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignEnd="@+id/button13"
            android:layout_alignRight="@+id/button13"
            android:layout_alignTop="@+id/button15"
            android:text="+" />

        <Button
            android:id="@+id/button17"
            android:layout_width="120px"
            android:layout_height="80px"
            android:layout_alignLeft="@+id/editText3"
            android:layout_alignStart="@+id/editText3"
            android:layout_below="@+id/editText3"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:text="ON" />

        <Button
            android:id="@+id/button18"
            android:layout_width="120px"
            android:layout_height="80px"
            android:layout_alignBaseline="@+id/button17"
            android:layout_alignBottom="@+id/button17"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:text="OFF" />
